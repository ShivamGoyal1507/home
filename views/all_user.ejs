<!DOCTYPE html>
<html lang="en">
 <!-- owner dashboard -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>

<body class="p-2 md:p-6">
    <h1 class="text-2xl md:text-3xl font-bold text-blue-600 mb-4">Dashboard</h1>

  <nav class="bg-white shadow-md rounded-lg mb-6 px-4 py-3">
    <div class="flex flex-col md:flex-row md:items-center md:space-x-6 space-y-2 md:space-y-0 text-sm md:text-base">
      <a href="/meter_reading"
         class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
         Upload Meter Reading
      </a>
      <a href="/approve_payment"
         class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
         Approve Payment
      </a>
      <a href="/new_payment"
         class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
         Pending Payment
      </a>
      <a href="/paid_payment"
         class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
         Paid Payment
      </a>
      <a href="/issue Notice"
         class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
         See Feedback
      </a>
      <a href="/complaints"
         class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
         See Complaints
      </a>
      <a href="/logout"  class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">
        Logout
      </a>
    </div>
  </nav>
    <% if (users.length === 0) { %>
        <div class="flex justify-center items-center w-full text-gray-500 text-lg mt-10">
            <div class="bg-black text-white px-6 py-4 rounded-lg shadow-md">
                <h1>No User Found</h1>
            </div>
        </div>
    <% } else { %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            <% users.forEach(user => { %>
                <div class="flex flex-col bg-gray-200 rounded-lg shadow-lg p-4 text-black">
                    <% if (user.image) { %>
                        <img src="/images/<%= user.image %>" alt="Profile"
                             class="w-24 h-24 rounded-full object-cover mb-2">
                    <% } else { %>
                        <div class="w-24 h-24 bg-gray-400 rounded-full flex items-center justify-center mb-2">
                            No Image
                        </div>
                    <% } %>

                    <h2 class="text-lg font-bold text-red-500"><%= user.name %></h2>
                    <p class="text-sm">Room Number: <%= user.room %></p>
                    <p class="text-sm">Phone Number: <%= user.number %></p>
                    <p class="text-sm">Family Members: <%= user.family %></p>
                    <p class="text-sm">
                        Joining Date: 
                        <% if (user.doj) { %>
                            <%= user.doj.toDateString() %>
                        <% } else { %>
                            Not Available
                        <% } %>
                    </p>

                    <div class="flex justify-between items-center text-xs mt-2">
                        <a href="/past_bills/<%=user._id %>" class="text-blue-500 hover:underline">More Info</a>
                        <a href="/edit_user/<%= user._id %>" class="text-green-500 hover:underline">Edit User</a>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>

</body>

</html>